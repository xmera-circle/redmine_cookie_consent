<%= stylesheet_link_tag 'cookieconsent.min', plugin: 'redmine_cookie_consent' %>
<%= javascript_include_tag('cookieconsent.min', plugin: 'redmine_cookie_consent') %>

<%= javascript_tag do %>
  window.addEventListener("load", function(){
  window.cookieconsent.initialise({
  "palette": {
    "popup": {
    "background": "#3E5B76",
    "text": "#ffffff"
    },
  "button": {
    "background": "#628DB6",
    "text": "#f8f8f8"
    }
  },
  "position": "bottom-left",
  "content": {
    "header": "Cookies on this website",
    "message": "We use session cookies. They are technically essential and will be deleted after closing your browser!",
    "dismiss": "Ok",
    "link": "learn more",
    "href": "https://en.wikipedia.org/wiki/HTTP_cookie#Session_cookie"
  },
  dismissOnScroll: 75
  })});
<% end %>